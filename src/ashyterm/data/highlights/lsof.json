{
    "name": "lsof",
    "description": "Highlights for lsof (list open files) output",
    "triggers": ["lsof"],
    "enabled": true,
    "rules": [
        {
            "name": "Command and PID",
            "pattern": "^(\\S+)\\s+(\\d+)\\s",
            "colors": ["bold cyan", "cyan"],
            "enabled": true,
            "description": "Highlights command and process ID"
        },
        {
            "name": "Root User",
            "pattern": "\\b(root)\\b",
            "colors": ["bold white on_red"],
            "enabled": true,
            "description": "Highlights root user"
        },
        {
            "name": "File Descriptors",
            "pattern": "\\b(\\d+[rwu])\\b",
            "colors": ["cyan"],
            "enabled": true,
            "description": "Highlights file descriptor numbers"
        },
        {
            "name": "File Types",
            "pattern": "\\b(REG|DIR|CHR|BLK|FIFO|LINK|SOCK|unix|IPv4|IPv6)\\b",
            "colors": ["magenta"],
            "enabled": true,
            "description": "Highlights file types"
        },
        {
            "name": "Network State",
            "pattern": "\\((LISTEN|ESTABLISHED|CLOSE_WAIT|TIME_WAIT|SYN_SENT)\\)",
            "colors": ["green"],
            "enabled": true,
            "description": "Highlights network states"
        },
        {
            "name": "Device Numbers",
            "pattern": "\\s(\\d+),(\\d+)\\s",
            "colors": ["bright_yellow", "yellow"],
            "enabled": true,
            "description": "Highlights device major,minor numbers"
        },
        {
            "name": "Path",
            "pattern": "\\s(/\\S+)",
            "colors": ["green"],
            "enabled": true,
            "description": "Highlights file paths"
        },
        {
            "name": "Deleted Files",
            "pattern": "(\\(deleted\\))",
            "colors": ["red"],
            "enabled": true,
            "description": "Highlights deleted files"
        }
    ]
}
