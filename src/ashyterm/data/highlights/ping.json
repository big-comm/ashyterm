{
    "name": "ping",
    "description": "Highlights for ping command output",
    "triggers": ["ping", "ping6", "fping", "nping"],
    "enabled": true,
    "rules": [
        {
            "name": "Target Host",
            "pattern": "(?:from|PING)\\s+(\\S+)\\s",
            "colors": ["blue"],
            "enabled": true,
            "description": "Highlights target hostname"
        },
        {
            "name": "Sequence Number",
            "pattern": "(icmp_seq=)(\\d+)",
            "colors": ["white", "yellow"],
            "enabled": true,
            "description": "Highlights ICMP sequence number"
        },
        {
            "name": "TTL",
            "pattern": "(ttl=)(\\d+)",
            "colors": ["white", "magenta"],
            "enabled": true,
            "description": "Highlights TTL values"
        },
        {
            "name": "Fast Response (<50ms)",
            "pattern": "(time=)([0-4]?\\d(?:\\.\\d+)?)\\s*(ms)",
            "colors": ["white", "bold green", "white"],
            "enabled": true,
            "description": "Highlights fast ping responses under 50ms"
        },
        {
            "name": "Medium Response (50-200ms)",
            "pattern": "(time=)(5\\d|[6-9]\\d|1\\d{2}|200)(?:\\.\\d+)?\\s*(ms)",
            "colors": ["white", "yellow", "white"],
            "enabled": true,
            "description": "Highlights medium ping responses 50-200ms"
        },
        {
            "name": "Slow Response (>200ms)",
            "pattern": "(time=)(2[0-9][1-9]|[3-9]\\d{2}|\\d{4,})(?:\\.\\d+)?\\s*(ms)",
            "colors": ["white", "bold red", "white"],
            "enabled": true,
            "description": "Highlights slow ping responses over 200ms"
        },
        {
            "name": "Zero Packet Loss",
            "pattern": "(0)(?:\\.0)?(%\\s*packet\\s*loss)",
            "colors": ["bold green", "green"],
            "enabled": true,
            "description": "Highlights zero packet loss"
        },
        {
            "name": "Packet Loss",
            "pattern": "([1-9]\\d*|100)(?:\\.\\d+)?(%\\s*packet\\s*loss)",
            "colors": ["bold red", "red"],
            "enabled": true,
            "description": "Highlights packet loss percentage"
        },
        {
            "name": "Statistics Header",
            "pattern": "---\\s+(\\S+)\\s+ping statistics\\s+---",
            "colors": ["bold blue"],
            "enabled": true,
            "description": "Highlights statistics section header"
        },
        {
            "name": "RTT Statistics",
            "pattern": "(rtt)\\s+(min)/(avg)/(max)/(mdev)",
            "colors": ["cyan", "bright_yellow", "bright_blue", "bright_red", "bright_magenta"],
            "enabled": true,
            "description": "Highlights RTT statistics labels"
        },
        {
            "name": "RTT Values",
            "pattern": "=\\s*([\\d.]+)/([\\d.]+)/([\\d.]+)/([\\d.]+)",
            "colors": ["bright_yellow", "bright_blue", "bright_red", "bright_magenta"],
            "enabled": true,
            "description": "Highlights RTT min/avg/max/mdev values"
        },
        {
            "name": "DUP",
            "pattern": "(DUP!)",
            "colors": ["red"],
            "enabled": true,
            "description": "Highlights duplicate packets"
        },
        {
            "name": "Errors",
            "pattern": "(Destination Host Unreachable|Network is unreachable)",
            "colors": ["bold red"],
            "enabled": true,
            "description": "Highlights error messages"
        },
        {
            "name": "Unknown Host",
            "pattern": "(unknown host)\\s+(\\S+)",
            "colors": ["red", "bold red"],
            "enabled": true,
            "description": "Highlights unknown host errors"
        },
        {
            "name": "SENT/RCVD",
            "pattern": "(SENT|RCVD)",
            "colors": ["red"],
            "enabled": true,
            "description": "Highlights nping SENT/RCVD labels"
        }
    ]
}
